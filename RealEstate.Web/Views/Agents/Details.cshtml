@model RealEstate.Domain.DomainModels.Agent
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Agent</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Phone)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Phone)
        </dd>
        <dt class="col-sm-2">
            Properties
        </dt>
        <dd class="col-sm-10">
            @if (ViewBag.Properties != null && ((List<RealEstate.Domain.DomainModels.Property>)ViewBag.Properties).Any())
            {
                <ul>
                    @foreach (var property in (List<RealEstate.Domain.DomainModels.Property>)ViewBag.Properties)
                    {
                        <li>
                            <a asp-controller="Properties" asp-action="Details" asp-route-id="@property.Id">
                                @property.Title - @property.Address
                            </a>
                        </li>
                    }
                </ul>
            }
            else
            {
                <span class="text-muted">No properties assigned</span>
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="ManageProperties" asp-route-id="@Model?.Id">Manage Properties</a> |
    <a asp-action="Index">Back to List</a>
</div>