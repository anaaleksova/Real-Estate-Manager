@model List<RealEstate.Domain.DomainModels.Property>
@{
    ViewData["Title"] = "My Properties";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>My Properties</h2>
        <a href="@Url.Action("CreateProperty")" class="btn btn-primary">
            <i class="fas fa-plus"></i> Add New Property
        </a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Address</th>
                        <th>Price</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var property in Model)
                    {
                        <tr>
                            <td>@property.Title</td>
                            <td>@property.Address</td>
                            <td>$@property.Price.ToString("N0")</td>
                            <td>
                                <span class="badge bg-@(property.Status == "Available" ? "success" : "secondary")">
                                    @property.Status
                                </span>
                            </td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a href="@Url.Action("EditProperty", new { id = property.Id })"
                                       class="btn btn-sm btn-outline-primary">Edit</a>
                                    <a href="@Url.Action("DeleteProperty", new { id = property.Id })"
                                       class="btn btn-sm btn-outline-danger">Delete</a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="text-center mt-5">
            <h4>No properties yet.</h4>
            <p>Start by adding your first property listing!</p>
            <a href="@Url.Action("CreateProperty")" class="btn btn-primary">Add First Property</a>
        </div>
    }
</div>