@model List<RealEstate.Domain.DomainModels.Appointment>
@{
    ViewData["Title"] = "My Appointments";
}

<div class="container">
    <h2>My Appointments</h2>

    @if (Model.Any())
    {
        <div class="row">
            @foreach (var appointment in Model.OrderBy(a => a.ScheduledDate))
            {
                <div class="col-md-6 mb-4">
                    <div class="card">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <h6 class="mb-0">@appointment.Property?.Title</h6>
                            <span class="badge bg-@(appointment.Status == "Scheduled" ? "primary" :
                                                  appointment.Status == "Completed" ? "success" : "secondary")">
                                @appointment.Status
                            </span>
                        </div>
                        <div class="card-body">
                            <p><strong>Date & Time:</strong> @appointment.ScheduledDate.ToString("dd MMM yyyy, HH:mm")</p>
                            <p><strong>Property:</strong> @appointment.Property?.Address</p>
                            <p><strong>Agent:</strong> @appointment.Agent?.ApplicationUser?.FullName</p>
                        </div>
                        <div class="card-footer">
                            <small class="text-muted">
                                Agent Contact: @appointment.Agent?.ApplicationUser?.Email
                            </small>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="text-center mt-5">
            <h4>No appointments scheduled.</h4>
            <p>Browse properties and schedule your first appointment!</p>
            <a href="@Url.Action("Properties")" class="btn btn-primary">Browse Properties</a>
        </div>
    }
</div>